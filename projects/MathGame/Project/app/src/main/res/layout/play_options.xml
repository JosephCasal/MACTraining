<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/blank_chalkboard_background">

    <Button
        android:id="@+id/buttonEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:text="Easy" 
        android:background="@null"/>


    <Button
        android:id="@+id/buttonMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Medium"
        android:textSize="40sp" 
        android:background="@null"/>

    <Button
        android:id="@+id/buttonHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMedium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Hard"
        android:textSize="40sp" 
        android:background="@null"/>

        <Button
        android:id="@+id/buttonChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHard"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:text="Challenge" 
        android:background="@null"/>

    
        <Button
        android:id="@+id/buttonPractice"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChallenge"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="Practice" 
        android:background="@null"/>
    

</RelativeLayout>
