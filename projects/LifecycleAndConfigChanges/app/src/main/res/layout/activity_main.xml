<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joseph.lifecycleandconfigchanges.MainActivity">

    <EditText
        android:id="@+id/etValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="default value"
        android:id="@+id/tvValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="updateTextView"
        android:text="update text view"
        android:id="@+id/btnChangeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="goToSecondActivity"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="got to second"/>

</LinearLayout>
