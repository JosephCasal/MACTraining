<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.joseph.fragments.MainActivity">

    <fragment
        android:name="com.example.joseph.fragments.RedFragment"
        android:id="@+id/fragRed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_height"/>

    <Button
        android:text="Add Blue Fragment"
        android:onClick="addingFragments"
        android:id="@+id/btnAddBlueFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Add Green Fragment"
        android:onClick="addingFragments"
        android:id="@+id/btnAddGreenFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Add Yellow Fragment"
        android:onClick="addingFragments"
        android:id="@+id/btnAddYellowFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Add Text to yellow Fragment"
        android:onClick="addingFragments"
        android:id="@+id/btnAddTextYellowFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Remove Blue fragment"
        android:id="@+id/removeBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="addingFragments"/>

    <FrameLayout
        android:id="@+id/frameBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/frameYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
